# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
POST    /submitIndex                            Application.submitIndex
POST    /submitLicense                          Application.submitLicense 
POST    /submitDocInfo                          Application.submitDocInfo 
POST    /submitFileUpload                       Application.submitFileUpload 
GET     /shibboleth-login              			Application.dump 
GET     /vireoAdmin		              			Application.vireoAdmin 
GET     /settings		              			Application.settings 
POST    /settings/vireo/admin/settings			Application.postSettings

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
